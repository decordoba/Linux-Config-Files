[user]
        name = decordoba
        email = danidecordoba@gmail.com

[alias]
        co = checkout
        ci = commit
        st = status
        br = branch
        hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
        type = 'cat-file
        dump = 'cat-file

[core]
        whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
        excludesfile = $HOME/git/.gitignore
        editor = vim

[color]
        ui = auto

[color "branch"]
        current = yellow bold
        local = green bold
        remote = cyan bold

[color "diff"]
        meta = yellow bold
        frag = cyan bold
        old = red bold
        new = green bold
        whitespace = red reverse

[color "status"]
        added = green bold
        changed = yellow bold
        untracked = red bold
